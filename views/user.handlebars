<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <form>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Enter Height (ft)</label>
                    <input type="number" class="form-control" name="heightInput" placeholder="5.9">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Enter Current Weight (lbs)</label>
                    <input type="number" class="form-control" name="weightInput" placeholder="185">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Goals</label>
                    <select class="form-control" name="goalsInput">
                        <option>Lose Weight</option>
                        <option>Gain Serious Mass</option>
                        <option>Cardio and Heart Health</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Motivational quotes, or notes from your workouts</label>
                    <textarea class="form-control" name="notesInput" rows="3"></textarea>
                </div>
                <button class="primary-btn submit-btn">Submit</button>
            </form>

        </div>
        <div class="col-lg-8">
            <h2 class="stats-heading">Current Stats</h2>
            <div id="userStats">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Category</th>
                            <th scope="col">Current Stats</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Height</th>
                            <td id="myHeight">{{height}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Weight</th>
                            <td id="myWeight">{{weight}} lbs</td>
                        </tr>
                        <tr>
                            <th scope="row">Weight Type</th>
                            <td id="myWeightType"></td>
                        </tr>
                        <tr>
                            <th scope="row">BMI</th>
                            <td id="myBMI"></td>
                        </tr>
                        <tr>
                            <th scope="row">My Notes</th>
                            <td id="myNotes">{{notes}}</td>
                        </tr>
                    </tbody>
                </table>
                            <br>
            <button class="primary-btn bmi-btn">Calculate BMI</button>

            </div>
        </div>
    </div>
    <hr>
    <h3>Schedule your next session!</h3>
